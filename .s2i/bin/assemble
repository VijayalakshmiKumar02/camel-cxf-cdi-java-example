#!/bin/bash

# run original assemble script

/usr/local/s2i/assemble

# install AppDynamics agent

curl -H "Accept: application/zip" https://raw.githubusercontent.com/benemon/fis-java-appdynamics-plugin/master/appdynamics-agent.zip -o $DEPLOYMENTS_DIR/appdynamics-agent.zip 

pushd $DEPLOYMENTS_DIR
unzip appdynamics-agent.zip
rm -f appdynamics-agent.zip
popd

